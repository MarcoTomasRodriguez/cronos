{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@typeDefs/*": ["types/*"],
      "@libs/*": ["libs/*"],
      "@hooks/*": ["hooks/*"],
      "@store": ["store"],
      "@styles/*": ["styles/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@contexts/*": ["contexts/*"],
      "@constants/*": ["constants/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
